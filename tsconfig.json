{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "lib": ["es2020"],
        "outDir": "out",
		"sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "rootDir": "src",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "jest"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules",
		".vscode-test",
        "dummy.package.ts",
        "__mocks__"
    ]
}
  